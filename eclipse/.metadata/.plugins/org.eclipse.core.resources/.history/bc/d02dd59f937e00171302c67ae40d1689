package com.TominoCZ.FBP;

import javax.vecmath.Vector2f;

import org.lwjgl.util.vector.Vector3f;

public class VertexF {
	public Vector3f pos;
	public Vector3f normal;

	public Vector2f UV;

	public VertexF(float x, float y, float z, float nX, float nY, float nZ, float U, float V) {
		pos = new Vector3f(x, y, z);
		normal = new Vector3f(x, y, z);

		UV = new Vector2f(U, V);
	}

	public int[] getParsedVertexData() {
		int[] data = new int[8];

		data[0] = Float.floatToRawIntBits(pos.x);
		data[1] = Float.floatToRawIntBits(pos.y);
		data[2] = Float.floatToRawIntBits(pos.z);
		
		data[3] = Float.floatToRawIntBits(pos.x);
		data[4] = Float.floatToRawIntBits(pos.x);
		data[5] = Float.floatToRawIntBits(pos.x);
		
		data[6] = Float.floatToRawIntBits(pos.x);
		data[7] = Float.floatToRawIntBits(pos.x);

		return data;
	}
}
